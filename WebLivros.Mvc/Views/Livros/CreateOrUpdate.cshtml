@model WebLivros.Mvc.Models.LivroViewModel

@{
    ViewData["Title"] = "CreateOrUpdate";
}

<p>
    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fa fa-mail-reply"></i> Voltar para Listagem</a>
</p>
<hr />
<div class="row" style="margin-left:auto; margin-right:auto; display:flex; flex-direction:row; justify-content:center; align-items:center">
    <div class="col-md-4">
        <form asp-action="CreateOrUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.LivroId)

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sinopse" class="control-label"></label>
                <textarea asp-for="Sinopse" class="form-control"></textarea>
                <span asp-validation-for="Sinopse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publicacao" class="control-label"></label>
                <input asp-for="Publicacao" class="form-control" />
                <span asp-validation-for="Publicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-outline-success" type="submit"><i class="fa fa-check"> Confirmar</i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
